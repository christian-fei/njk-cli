{
  "compilerOptions": {
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "downlevelIteration": true,
    "lib": [
      "dom",
      "es2017",
      "ESNext.AsyncIterable"
    ]
  },
  "include": [
    "src/**/*"
  ]
}
